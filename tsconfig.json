{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "es6"],
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*",
    "react/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "examples"
  ]
}